generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  bio       String?
  magicLink MagicLink?
  recipes   Recipe[]
}

model MagicLink {
  token     String   @id
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
}

model Photo {
  id       Int     @id @default(autoincrement())
  filename String  @unique
  recipe   Recipe?
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  name     String
  quantity String
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
}

model Recipe {
  id              Int          @id @default(autoincrement())
  title           String
  description     String?
  preparationTime Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  user            User         @relation(fields: [userId], references: [id])
  userId          Int
  photo           Photo?       @relation(fields: [photoId], references: [id])
  photoId         Int?         @unique
  ingredients     Ingredient[]
  category        Category     @relation(fields: [caterogyId], references: [id])
  caterogyId      Int
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  recipes Recipe[]
}
